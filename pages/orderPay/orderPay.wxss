/* pages/orderPay/orderPay.wxss */
.page_box{
  position: relative;
  padding-bottom: 100rpx;
}
.warnContent{
  background-color: #FEFEEB;
  height: 60rpx;
  line-height: 60rpx;
  padding-left: 20rpx;
  font-size: 24rpx;
  /* border-bottom: 20rpx solid #F2F2F2; */
}
.order_related{
  padding-left: 20rpx;
  border-top: 20rpx solid #F2F2F2;
  border-bottom: 20rpx solid #F2F2F2;
}
.order_related .item_box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;  
  padding-right: 20rpx;
}
.order_related .item_box text{
  font-size: 24rpx;
  
}
.order_related .item_box .ItemPrice{
  color: #E71F19;
  font-weight: 600
}
.pay_type{
  padding: 20rpx;
}
.pay_type_title{
  font-weight: 600;
}
.pay_type .pay_type_item{
  display: flex;
  align-items: center;
  height: 70rpx;  
  font-size: 24rpx;
}
.accountInfo{
  padding-left: 20rpx;
}
.accountInfo .info_title{
  line-height: 70rpx;
  color: #333;
  font-weight: 600;
}
.accountInfo .info_item{
  line-height: 60rpx;
}
.accountInfo .info_item text{
  color: #666;
  font-size: 24rpx;
}
.accountInfo.border{
  border-left: 1px solid #EBEBEB;
  border-right: 1px solid #EBEBEB;
  border-bottom: 1px solid #EBEBEB;
}
.btn{
  background: #E71F19;
  color: #fff;
  text-align: center;
  padding: 35rpx 20rpx 45rpx 20rpx;
  /* line-height: 80rpx; */
  font-size: 33rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  height:100rpx
}
.border_bottom01{
  border-bottom: 1px solid #F7F7F9;
}
.border_bottom{
  border-bottom: 20rpx solid #F2F2F2;
}
.img{
  width: 52rpx;
  height: 52rpx;
  display: block
}
.mr30{
  margin-right: 30rpx;
}

.circle {
  width: 28rpx;
  height: 28rpx;
  border-radius: 50%;
  border: 2rpx solid #E71F19;
  /* display: flex;
  justify-content: center;
  align-items: center; */
  display: none; /*隐藏*/
  }
.circle .circleIn {
  width:6px;
  height:6px;
  background:rgba(231,31,25,1);
  border-radius: 50%
}

.point {
  display: flex;
  flex-direction: row;
  padding: 18rpx 0 0 30rpx;
}

.pointIn {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  justify-content: center;

}

.pointDown {
  display: block;
  height: 32rpx;
  line-height: 32rpx;
  font-size: 28rpx
}
