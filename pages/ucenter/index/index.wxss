page {
  height: 100%;
  width: 100%;
  background: #f4f4f4;
}

.container {
  background: #f4f4f4;
  height: auto;
  overflow: hidden;
  width: 100%;
  /* position: relative */
}

.profile-info {
  /* background:linear-gradient(180deg,rgba(245,81,95,1) 0%,rgba(159,4,27,1) 100%); */
  background: #ED3F14;
  height: 474rpx;
  color: #f4f4f4;
  display: flex;
  align-items: center;
  /* margin-bottom: 230rpx; */
  padding: 30rpx;
  font-size: 28rpx;
  flex-direction: column;
  align-content: center; 
}

.profile-info .avatar {
  height: 148rpx;
  width: 148rpx;
  border-radius: 50%;
}

.profile-info .info {
  margin-top: 30rpx;
  height: 85rpx;

}

.profile-info .name {
  display: block;
  height: 45rpx;
  line-height: 45rpx;
  color: #fff;
  font-size: 37.5rpx;
  margin-bottom: 10rpx;
}

.profile-info .level {
  display: block;
  height: 30rpx;
  line-height: 30rpx;
  margin-bottom: 10rpx;
  color: #7f7f7f;
  font-size: 30rpx;
}

.user_area {
  /* border: 1px solid black; */
  /* width: 90%; */
  height: 248rpx;
  border-radius: 40rpx!important;
  margin: -120rpx 30rpx 10rpx 30rpx;
  padding-bottom: 40rpx;
  /* margin: 0 auto; */
  /* margin-bottom: 20rpx; */
  
  background: #fff;
  /* border-top: 1px solid #f4f4f4; */
}

.user_row {
  /* border: 1px solid black; */
  height: 86rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #fafafa;
}

.user_row_left {
  /* border: 1px solid #757575; */
  font-weight: 550;
  margin-left: 35rpx;
  font-size: 30rpx;
  letter-spacing: 1rpx;
}

.user_row_right {
  color: rgba(128,132,143,1);
  display: flex;
  align-items: center;
}
.user_row_right image {
  /* border: 1px solid #757575; */
  height: 35rpx;
  width: 35rpx;
  line-height: 86rpx;
  margin-right: 30rpx;
}

.user_column {
  /* border: 1px solid black; */
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user_column_item {
  width: 30%;
  height: 140rpx;
  background: #fff;
  text-align: center;
  position: relative;
}
.user_coreBox{
  width: 100%;
  /* border-top:18rpx solid rgba(233,234,236,1); */
  background-color: #fff;
  /* padding-left: 32rpx;
  padding-right: 44rpx; */
  margin-top: 20rpx;
}
.user_coreBox_item_image{
  width:30rpx;
  height:30rpx;
  margin-right: 10rpx;
}
.user_column_item01 {
  padding: 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #EEEEEE;
}
.noBorder{
  border: none;
}
.user_column_item_badge {
  font-size: 18rpx;
  height: 28rpx;
  width: 28rpx;
  position: absolute;
  line-height: 28rpx;
  text-align: center;
  color: #ED3F14;
  background: #fff;
  border: 2rpx solid #ED3F14;
  border-radius: 50%;
  margin-top: 20rpx;
  margin-left: 30rpx;
  /* box-shadow: 5rpx 5rpx 5rpx 5rpx rgba(239, 24, 24, 0.26); */
  font-weight: bolder;
}

.user_column_item_image {
  width: 50rpx;
  height: 50rpx;
  margin-top: 30rpx;
}

.user_column_item_text {
  /* border: 1px solid black; */
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #555;
}


.user_column_item_phone {
  width: 30%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  float: left;
  background: #fff;
  border-bottom: 1px solid #fafafa;
}

.user_column_item_phone::after {
  border: none;
}

.logout {
  margin: 30rpx auto;
  height: 100rpx;
  width: 694rpx;
  line-height: 100rpx;
  text-align: center;
  background:rgba(237,63,20,1);
border-radius:4px;
  color: #fff;
  font-size: 30rpx;
}

