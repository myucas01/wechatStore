} */

.order .h {
  height: 83.3rpx;
  line-height: 83.3rpx;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  border-bottom: 1px solid #f4f4f4;
  font-size: 30rpx;
  color: #333;
}

.order .h .l {
  float: left;
}

.order .h .r {
  float: right;
  color: #E71F19;
  font-size: 24rpx;
  font-weight: 600
}

.order .goods {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  margin-left: 31.25rpx;
}

.order .goods .img {
  height: 145.83rpx;
  width: 145.83rpx;
  background: #f4f4f4;
}

.order .goods .img image {
  height: 145.83rpx;
  width: 145.83rpx;
}

.order .goods .info {
  height: 145.83rpx;
  flex: 1;
  padding-left: 20rpx;
  overflow: hidden;
}
.order .goods .info .lable{
  height: 34rpx;
  line-height: 34rpx;
  border: 1px solid #DDDEE1;
  color: #495060;
  font-size: 20rpx;
  padding:0 12rpx;
  border-radius: 3px;
  margin-right: 10rpx;
  display: block;
  margin-bottom: 6rpx
}
.order .goods .name {
  display: block;
  height: 44rpx;
  line-height: 44rpx;
  color: #333;
  font-size: 30rpx;
  overflow: hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}


.order .goods .number {
  display: block;
  height: 37rpx;
  line-height: 37rpx;
  color: #666;
  font-size: 25rpx;
}

.order .goods .status {
  font-size: 28rpx;
  margin-right: 30rpx;
  margin-top: 85rpx;
}

.order .b {
  height: 103rpx;
  line-height: 103rpx;
  margin-left: 31.25rpx;
  padding-right: 31.25rpx;
  font-size: 30rpx;
  color: #333;
}

.order .b .l {
  float: left;
}

.ordersDown {
  display: flex;
  height:90rpx;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  border-top: 2rpx solid #F1F1F1;
}
.ordersDown .btn{
  width: 156rpx;
  height: 66rpx;
  font-size: 24rpx;
  line-height: 66rpx;
  text-align: center;
  border: 2rpx solid #F1F1F1;
  margin: 0 10rpx;
  border-radius: 5rpx;
}
.ordersDown .btnU {
  background: #E71F19;
  color: #fff;
  margin-right: 30rpx;
}
.order .b .r {
  float: right;
  color:#495060;
  font-weight: 600
}

.order .b .btn {
  margin-top: 19rpx;
  height: 64.5rpx;
  line-height: 64.5rpx;
  text-align: center;
  padding: 0 20rpx;
  border-radius: 5rpx;
  font-size: 28rpx;
  color: #fff;
  background: #b4282d;
}
.item-c {
  padding-left: 31.25rpx;
  border-top: 1px solid #f4f4f4;
  line-height: 103rpx;
  background: #fff;
}

.item-c .l {
  float: left;
}

.item-c .r {
  
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 16rpx;
}

.item-c .r .btn {
  margin: 20rpx 15rpx;
}

.item-c .cost {
  color: #E71F19;
}

.item-c .btn {
  line-height: 66rpx;
  border-radius: 5rpx;
  text-align: center;
  margin: 0 15rpx;
  padding: 0 20rpx;
  height: 66rpx;
  border: 1px solid #f4f4f4;
}

.item-c .btn.active {
  background: #E71F19;
  border-color: #E71F19;
  color: #fff;
}

.logisticsBox{
  width:100%;
  height:100%;
  position: fixed;
  top:0;
  left:0;
  background: rgba(0,0,0,0.5);
  padding: 0 30rpx;
}
.logisticsBox .infoBox{
  background: #fff;
  padding: 20rpx 24rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%);
  width:80%;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  justify-content: center
}
.logisticsBox .infoBox .item{
  display: flex;
  justify-content: space-between;
  line-height: 70rpx;
}
.pageBottom {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #999
}