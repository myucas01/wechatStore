.login-box {
  width: 670rpx;
  height: 499rpx;
  box-shadow: 0px 40px 40px 0px rgba(0, 0, 0, 0.05);
  border-radius: 20rpx;
  border: 2rpx solid rgba(233,234,236,1);
  margin: 50rpx 40rpx 0 0;
  background-color: rgba(255,255,255,0.9);
  padding: 30rpx;
  position:relative;
}

.form-box {
  width: 100%;
  height: 100%;
  overflow: hidden;
  padding: 0 40rpx;
  /* background-color: #fff; */
  position: absolute;
  top: 0;
  left: 0;
}

.loginType{
  display: flex;
  justify-content:center;
  align-items: center;
  font-weight: 600;
  margin-top: 80rpx;
}
.loginType .border01{
  border-right: 1px solid #E9EAEC;
}

.login-box .b-title{
  display: block;
  font-size: 28rpx;
  font-family:PingFangSC-Medium,PingFang SC;
  font-weight:800;
  color:#203152;
  line-height:40rpx;
}

.login-box .b-text{
  border-bottom: 2rpx solid #d6d6d6;
}

.login-box .logonMs {
  color: rgba(237,63,20,1);
  height: 45rpx;
  display: block;
}

.b_input{
  width: 430rpx;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 40rpx;
  color:rgba(51, 51, 51, 1);
  font-weight:400;
  border:none;
}
.b_input_placeholder{
  color:rgb(202, 206, 214);
  font-size:30rpx;
}
.auth_code{
  position:relative;
  margin-top:40rpx;
}
.auth_pwd{
  position:relative;
  margin-top:40rpx;
}
.auth_code_button{
  position:absolute;
  right: 0;
  bottom: 50rpx; 
  font-size: 28rpx;
  display: inline-block;
  line-height: 100rpx;
  white-space: nowrap;
  height: 100rpx;
}
.haddle_up{
  width:590rpx;
  height:110rpx;
  background:rgba(237,63,20,1);
  box-shadow:0px 40px 60px 0px rgba(231,31,25,0.22);
  border-radius:56rpx;
  text-align: center;
  line-height:110rpx;
  position:absolute;
  top:440rpx;
  left: 38rpx;
  color:#fff;
  font-weight:600;
  letter-spacing:2rpx;
}
